<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_mesg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_weight"
    android:background="@mipmap/blacbackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.cndll.chgj.weight.AllLayout
            android:id="@+id/alllayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center">

                <TextView
                    android:id="@+id/number_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:background="@drawable/shape_dialog_fillet_solid"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#050BFA"
                    android:textSize="@dimen/mid_text" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:paddingLeft="4dp">

                    <TextView

                        android:id="@+id/desh_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:ellipsize="end"
                        android:gravity="center_vertical|left"
                        android:lines="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/mid_text" />

                    <TextView
                        android:id="@+id/desh_method"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:ellipsize="end"
                        android:gravity="center_vertical|left"
                        android:lines="1"
                        android:paddingRight="8dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_text" />
                </LinearLayout>

            </LinearLayout>

        </com.cndll.chgj.weight.AllLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:paddingRight="16dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/mid_text" />

            <TextView
                android:id="@+id/sendstatue"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:paddingRight="16dp"
                android:text="100"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center">

            <TextView
                android:id="@+id/yaoqiu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:background="@drawable/shape_dialog_fillet_solid"
                android:gravity="center"
                android:text="要求"
                android:textColor="#050BFA"
                android:textSize="@dimen/small_text" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>