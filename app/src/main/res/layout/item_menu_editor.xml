<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_weight"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:layout_marginTop="4dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/itemWeight"
        android:background="@drawable/shape_verify_button">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menu_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:background="@drawable/shape_tran"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:lines="2"
                android:padding="2dp"
                android:text="小炒类"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/shape_tran"
                android:gravity="center_vertical|left"
                android:paddingLeft="2dp"
                android:text="￥18/份"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/shape_tran"
                android:gravity="center_vertical|left"
                android:paddingLeft="2dp"
                android:text="折扣：可  编号：12  厨房打印机"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/move"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/shape_order_capinlist_button"
            android:gravity="center"
            android:text="排序"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/revise"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_weight="1.3"
        android:background="@drawable/shape_fillet_solid"
        android:gravity="center"
        android:text="修改"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>