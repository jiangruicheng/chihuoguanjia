<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:background="@drawable/shape_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="门店名称" />

            <EditText
                android:singleLine="true"
                android:id="@+id/edit_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:layout_weight="3"
                android:background="@drawable/shape_dialog_fillet_solid"
                android:lines="1"
                android:padding="4dp"
                android:selectAllOnFocus="true"
                android:textColor="@color/buttonStork"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="门店类型" />

            <TextView
                android:singleLine="true"
                android:id="@+id/type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:layout_weight="3"
                android:background="@drawable/shape_dialog_fillet_solid"
                android:drawableRight="@mipmap/down"
                android:gravity="center_vertical|left"
                android:lines="1"
                android:padding="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/buttonStork"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="手机号码" />

            <EditText
                android:id="@+id/edit_tel"
                android:layout_width="0dp"
                android:singleLine="true"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:layout_weight="3"
                android:background="@drawable/shape_dialog_fillet_solid"
                android:inputType="number"
                android:lines="1"
                android:padding="4dp"
                android:textColor="@color/buttonStork"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/verify_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="验证码" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:layout_weight="3">

                <EditText
                    android:singleLine="true"
                    android:id="@+id/edit_verify"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/shape_dialog_fillet_solid"
                    android:lines="1"
                    android:padding="4dp"
                    android:textColor="@color/buttonStork"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/get_verify"
                    android:layout_width="56dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_verify_button"
                    android:text="获取"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="门店区域" />

            <TextView
                android:id="@+id/sheng"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:layout_weight="1.5"
                android:background="@drawable/shape_dialog_fillet_solid"
                android:drawableRight="@mipmap/down"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:padding="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/buttonStork"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/shi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1.5"
                android:background="@drawable/shape_dialog_fillet_solid"
                android:drawableRight="@mipmap/down"
                android:drawableTintMode="multiply"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:padding="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/buttonStork"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/story_id_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="门店号" />

            <TextView
                android:id="@+id/story_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:layout_weight="3"
                android:background="@color/white" />
        </LinearLayout>

        <include
            layout="@layout/popview_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7" />

    </LinearLayout>
</LinearLayout>