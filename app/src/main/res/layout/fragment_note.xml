<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.cndll.chgj.fragment.NoteFragment">

    <include layout="@layout/title_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@color/yinse"
        android:gravity="center_vertical"
        android:paddingLeft="4dp"
        android:text="已选要求" />

    <ListView
        android:id="@+id/select_method"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.7" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@color/yinse"
        android:gravity="center_vertical"
        android:paddingLeft="4dp"
        android:text="要求项目" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/all_method"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/write_method"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/shape_dialog_fillet_solid"
            android:text="手写要求" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/shape_button_yellow"
            android:text="取消"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/makesure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/shape_fillet_solid_green"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
