<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@drawable/shape_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/show"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1.5"
            android:background="@drawable/shape_dialog_fillet_solid"
            android:gravity="center"
            android:hint="输入"
            android:padding="3dp"
            android:textColor="@color/buttonStork"
            android:textSize="@dimen/mid_text" />

        <include
            layout="@layout/activity_key"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="7" />

        <LinearLayout
            android:id="@+id/buttonlayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/shape_fillet_solid"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/mid_text" />

            <Button
                android:id="@+id/sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/shape_button_yellow"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/mid_text" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>