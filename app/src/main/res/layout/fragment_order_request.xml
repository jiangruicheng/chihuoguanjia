<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="com.cndll.chgj.fragment.OrderInfoFragment">

    <include layout="@layout/title_bar" />

    <ListView
        android:id="@+id/order_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.8"
        android:divider="@color/white"
        android:dividerHeight="1dp" />

    <include
        layout="@layout/layout_order_desh_count"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1.5">

        <Button
            android:id="@+id/pay_nodesk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="12dp"
            android:textSize="@dimen/mid_text"
            android:background="@drawable/shape_dialog_fillet_solid"
            android:text="买单"
            android:textColor="@color/buttonStork"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layout_mode_have_tesk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/other"
                    android:textSize="@dimen/mid_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_dialog_fillet_solid"
                    android:text="其他功能"
                    android:textColor="#FA05DA" />

                <Button
                    android:id="@+id/send"
                    android:layout_width="0dp"
                    android:textSize="@dimen/mid_text"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_dialog_fillet_solid"
                    android:text="送单"
                    android:textColor="#F70000" />

                <Button
                    android:id="@+id/pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/mid_text"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_dialog_fillet_solid"
                    android:text="买单"
                    android:textColor="#F70000" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:weightSum="3">


                <Button
                    android:id="@+id/dazhe"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:textSize="@dimen/mid_text"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_dialog_fillet_solid"
                    android:text="打折"
                    android:textColor="#050BFA" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
